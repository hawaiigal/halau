<%= form_with model: @hour_entry, class: "entry_form" do |form| %>

    <%= form.label :haumana_id %>
    <%= form.select :haumana_id, Haumana.all.collect { |haumana| [haumana.name, haumana.id] } %>
    <%= @hour_entry.errors.full_messages_for(:haumana_id).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:haumana_id).empty? %>

    <%= form.label :date %>
    <%= form.date_field :date %>
    <%= @hour_entry.errors.full_messages_for(:date).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:date).empty? %>

    <%= form.label :type_of_entry %>
    <%= form.select :type_of_entry, options_for_select({"Hours Worked" => "hours_worked", "Hours Used" => "hours_used"}) %>
    <%= @hour_entry.errors.full_messages_for(:type_of_entry).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:type_of_entry).empty? %>


    <%= form.label :activity_detail_id %>
    <%= form.select :activity_detail_id, ActivityDetail.all.collect {|c| [c.name, c.id]} %>
    <%= @hour_entry.errors.full_messages_for(:activity_detail_id).each do |message| %>
      <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:activity_detail_id).empty? %>


    <%= form.label :hours %>
    <%= form.number_field :hours %>
    <%= @hour_entry.errors.full_messages_for(:hours).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:hours).empty? %>


    <%= form.label :minutes %>
    <%= form.number_field :minutes %>
    <%= @hour_entry.errors.full_messages_for(:minutes).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:minutes).empty? %>


    <%= form.label :notes %>
    <%= form.text_area :notes, cols:40, rows:5 %>
    <%= @hour_entry.errors.full_messages_for(:notes).each do |message| %>
        <div><%= message %></div>
    <% end unless @hour_entry.errors.full_messages_for(:notes).empty? %>


    <%= form.submit %>
<% end %>